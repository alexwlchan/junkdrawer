# Version 1.0 -- Generated content!
exclude          = '{*.{o,pyc},Icon\r,CVS,_darcs,_MTN,\{arch\},blib,*\~.nib,__pycache__,target,node_modules}'
fontName         = PragmataPro
fontSize         = 15
include          = {*,.mergify.yml,.tm_properties,.travis*,.github*,.gitignore,.scalafmt.conf,.coveragerc,.wellcome_project}
showInvisibles   = false
showWrapColumn   = true
softTabs         = true
softWrap         = true
tabSize          = 2
theme            = A4299D9B-1DE5-4BC4-87F6-A757E71B1597
wrapColumn       = 89

[ *.md ]
fileType         = text.html.markdown

[ *.py ]
fileType         = source.python

[ *.rs ]
fileType         = source.rust

[ *.cfg ]
fileType         = source.python

[ *.ini ]
fileType         = source.ini

[ *.sbt ]
fileType         = source.scala

[ *.svg ]
fileType         = text.xml

[ *.ttx ]
fileType         = text.xml

[ *.txt ]
fileType         = text.plain

[ *.cxml ]
fileType         = text.xml

[ *.fish ]
fileType         = source.shell

[ *.json ]
fileType         = source.json

[ *.scpt ]
fileType         = source.applescript

[ *.ipynb ]
fileType         = source.json

[ *.scala ]
fileType         = source.scala

[ *.py.tpl ]
fileType         = source.python

[ *.Makefile ]
fileType         = source.makefile

[ Dockerfile ]
fileType         = source.dockerfile

[ Jenkinsfile ]
fileType         = source.groovy

[ *.svg.template ]
fileType         = text.xml

[ managed_schema ]
fileType         = text.xml

